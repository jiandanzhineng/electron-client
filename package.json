{
  "name": "easysmart-electron",
  "version": "1.1.15",
  "main": "main.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:vite\" \"npm run dev:electron\"",
    "dev:vite": "vite",
    "dev:electron": "cross-env NODE_ENV=development nodemon --exec electron . --watch main.js --watch preload.js --watch services/ --watch util/ --ignore node_modules/",
    "build": "vite build",
    "build:electron": "electron-builder",
    "dist": "npm run build && electron-builder --win nsis --publish=onTagOrDraft",
    "dist:never": "npm run build && electron-builder --publish=never",
    "dist:installer": "npm run build && electron-builder --win nsis --publish=never",
    "dist:portable": "electron-builder --win portable --publish=never",
    "start": "electron .",
    "test": "node test/run-tests.js",
    "test:verbose": "node test/run-tests.js --verbose",
    "test:pushup": "node test/run-tests.js pushup",
    "test:watch": "nodemon --exec \"npm test\" --watch test/ --watch outter-game/"
  },
  "keywords": [
    "electron",
    "desktop",
    "application"
  ],
  "author": "",
  "license": "ISC",
  "description": "一个基于Electron的跨平台桌面应用",
  "devDependencies": {
    "concurrently": "^9.2.0",
    "cross-env": "^7.0.3",
    "electron": "^36.2.1",
    "electron-builder": "^24.13.3",
    "electron-reloader": "^1.2.3",
    "nodemon": "^3.0.2",
    "wait-on": "^8.0.3"
  },
  "dependencies": {
    "@abandonware/noble": "^1.9.2-26",
    "@vitejs/plugin-vue": "^4.6.2",
    "adm-zip": "^0.5.10",
    "bonjour-service": "^1.3.0",
    "electron-updater": "^6.6.2",
    "element-plus": "^2.10.1",
    "form-data": "^4.0.4",
    "mqtt": "^5.13.0",
    "node-fetch": "^2.7.0",
    "pinia": "^2.3.1",
    "vite": "^5.4.19",
    "vue": "^3.5.16",
    "vue-router": "^4.5.1"
  },
  "build": {
    "appId": "com.easysmart",
    "productName": "EasySmart",
    "artifactName": "${productName}-Setup-${version}.${ext}",
    "icon": "assets/icon.ico",
    "directories": {
      "output": "dist"
    },
    "publish": {
      "provider": "github",
      "owner": "jiandanzhineng",
      "repo": "electron-client"
    },
    "files": [
      "dist/**/*",
      "main.js",
      "preload.js",
      "services/**/*",
      "util/**/*",
      "assets/**/*"
    ],
    "extraResources": [
      {
        "from": "inner-tools",
        "to": "inner-tools",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "outter-game",
        "to": "outter-game",
        "filter": [
          "**/*"
        ]
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "dir",
          "arch": [
            "x64"
          ]
        }
      ],
      "sign": null
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "EasySmart Electron",
      "deleteAppDataOnUninstall": false
    },
    "afterSign": null,
    "forceCodeSigning": false
  }
}
