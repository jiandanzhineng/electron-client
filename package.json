{
  "name": "easysmart-electron",
  "version": "1.0.0",
  "main": "main.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:vite\" \"npm run dev:electron\"",
    "dev:vite": "vite",
    "dev:electron": "cross-env NODE_ENV=development electron .",
    "build": "vite build",
    "build:electron": "electron-builder",
    "dist": "npm run build && electron-builder --publish=never",
    "start": "electron ."
  },
  "keywords": [
    "electron",
    "desktop",
    "application"
  ],
  "author": "",
  "license": "ISC",
  "description": "一个基于Electron的跨平台桌面应用",
  "devDependencies": {
    "concurrently": "^9.1.2",
    "cross-env": "^7.0.3",
    "electron": "^36.2.1",
    "electron-builder": "^24.13.3",
    "electron-reloader": "^1.2.3",
    "wait-on": "^8.0.3"
  },
  "dependencies": {
    "@vitejs/plugin-vue": "^4.6.2",
    "adm-zip": "^0.5.10",
    "bonjour-service": "^1.3.0",
    "mqtt": "^5.13.0",
    "pinia": "^2.3.1",
    "vite": "^5.4.19",
    "vue": "^3.5.16",
    "vue-router": "^4.5.1"
  },
  "build": {
    "appId": "com.easysmart.electron",
    "productName": "EasySmart Electron",
    "directories": {
      "output": "dist"
    },
    "files": [
      "dist/**/*",
      "main.js",
      "preload.js",
      "services/**/*",
      "util/**/*",
      "assets/**/*"
    ],
    "extraResources": [
      {
        "from": "inner-tools",
        "to": "inner-tools",
        "filter": ["**/*"]
      }
    ],
    "win": {
      "target": "dir",
      "sign": null
    },
    "afterSign": null,
    "forceCodeSigning": false
  }
}
